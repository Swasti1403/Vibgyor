<%- include("./views/auth-header") -%>
<!-- Login Form -->
<%if (data.error_message) { %>
    <h4 class="alert alert-danger mt-4"><%= data.error_message %></h4>
<% } %>
<form action="/login" method="POST">
    <div class="text-center pt-4">
        <h1><i class="fas fa-user"></i></h1>
        <h2>Login</h2>
        <hr style = "width: 50%; height:2px; background-color: #56baed;">
    </div>	
    <input type="text" id="email" name="email" placeholder="Email" required>
    <input type="password" id="password"  name="password" placeholder="Password" required>
    <input class="mt-4" type="submit"  value="Log In">
</form>

<!-- Remind Passowrd -->
<div id="formFooter">
    <div class="row">
    <a class="underlineHover col-6" href="/forgetPassword">Forgot Password?</a>             
    <a class="underlineHover col-6" href="/register">New User?</a>

    </div>
</div>
      
<%- include("./views/auth-footer") -%>

