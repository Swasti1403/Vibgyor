<%- include("./views/auth-header") -%>
<!-- Registration Form -->
<%if (data.error_message) { %>
    <h4 class="alert alert-danger mt-4"><%= data.error_message %></h4>
<% } %>
<%if (data.success_message) { %>
    <h4 class="alert alert-success mt-4"><%= data.success_message %></h4>
<% } %>
<form action="/register" method="POST">
    <div class="text-center pt-4">
        <h1><i class="fas fa-user-plus"></i></h1>
        <h2>Sign Up</h2>
        <hr style = "width: 50%; height:2px; background-color: #56baed;">
    </div>	
    <input type="text" id="name" name="name" placeholder="Name" required>
    <input type="text" id="email" name="email" placeholder="Email" required>
    <input type="tel" id="contact" name="contact" placeholder="Mobile" required>
    <input type="password" id="password"  name="password" placeholder="Password" required>
    <input type="password" id="confirm_password"  name="confirm_password" placeholder="Confirm Password" required>
    <input class="mt-4" type="submit"  value="Register">
</form>

<!-- Remind Passowrd -->
<div id="formFooter">
    <div class="text-center">
    <a class="underlineHover" href="/login">Already A User?</a>
    </div>
</div>
      
<%- include("./views/auth-footer") -%>

