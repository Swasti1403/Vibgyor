<%- include("./views/header") -%>
<body style="background-color:#56baed;">
    
<main>
    
    
    <div class="container-fluid db" >
        <div id="test">
            <div class="mt-4 text-center"><h3><strong>Name : {{test_name}}</strong></h3></div>
            <div class="row">
                
                    <div class="col-6 mt-4 text-center" >Total Questions : {{total_questions}}</div>
                    <div class="col-6 mt-4 text-center" >Total Time : {{test_time}}</div> 
                
            </div>
            <div class="text-right"style="font-size:large">{{min_left}}:{{sec_left}}</div>
            <div class="text-center" style="margin-top: 1%;" v-if="!test_started">
                <button @click="startTest ">Start Test</button>
            </div>
            <div class="text-center" v-if="test_started && !time_up">
                
                <div style="font-size: medium;font-weight: bold;margin-bottom: 1%;">Question Number {{current_question+1}}: {{questions[current_question]}}</div>
                <div style="margin-right:7% ;">
                    <input type="radio" id="option1" :name="current_question" :value="options[current_question].a">
                    <label for="option1">{{options[current_question].a}}</label><br>
                    <input type="radio" id="option2" :name="current_question" :value="options[current_question].b">
                    <label for="option2">{{options[current_question].b}}</label><br>
                    <input type="radio" id="option3" :name="current_question" :value="options[current_question].c">
                    <label for="option3">{{options[current_question].c}}</label><br>
                    <input type="radio" id="option4" :name="current_question" :value="options[current_question].d">
                    <label for="option4">{{options[current_question].d}}</label>
                </div>
                
                <div>
                    <span ><button style="font-size: 13px;" @click="prevQuestion">Prev Question</button></span>
                    <span style="margin-left: 20%;"><button style="font-size: 13px;" @click="nextQuestion">Next Question</button></span>
                </div>
            </div>

            <span v-if="time_up">
                Time Over! Thanks for attempting out test :P 
            </span>
        </div>
    </div>  


</main>
    
        
        
    
</main>

</body>
<%- include("./views/footer") -%>